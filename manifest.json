{

  "manifest_version": 2,
  "name": "hup blogszűrő",
  "description": "Egyszerű eszköz a hup.hu blog felhasználóinak szűrésére.",
  "version": "1.0",
  "options_ui": {
    "page": "options.html"
  },

  "permissions": [
    "storage"
  ],

  "browser_action": {
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    },
    "default_title": "Hup blogszűrő",
    "default_popup": "options.html"
  },

  "content_scripts": [
    {
      "matches": [
        "https://hup.hu/*"
      ],
      "js": [
        "hup-blog-filter.js"
      ]
    }
  ]

}